@model IEnumerable<SydneyFitnessStudio.Models.Reservation>

<h2>All Reservations</h2>

<table class="table">
    <thead>
        <tr>
            <th>Client Name</th>
            <th>Class Name</th>
            <th>Instructor</th>
            <th>Reservation Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var reservation in Model)
    {
        <tr>
            <td>@reservation.Person.Name</td>
            <td>@reservation.FitnessClass.ClassName</td>
            <td>@reservation.FitnessClass.Instructor</td>
            <td>@reservation.ReservationDate.ToString("yyyy-MM-dd HH:mm")</td>
            <td>
                <form asp-action="DeleteAsStaff" asp-route-id="@reservation.ReservationId" method="post">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
